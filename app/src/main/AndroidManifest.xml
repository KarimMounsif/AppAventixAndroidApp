            android:label="Historique de vos achats"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".Login.ChangerMdpActivity"
            android:label="Changement de mot de passe"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Login.ChangerMdpCommercantActivity"
            android:label="Changement de mot de passe"
