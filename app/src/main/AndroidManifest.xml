        <activity android:name=".MainPage.MainActivityCommercant" android:noHistory="false"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".Historique.TransactionCommercantActivity"
            android:label="Historique de vos transactions"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".Restaurant.RestaurantActivity"
            android:label="Réstaurants à proximité"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".Parametres.SettingsActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".ConsulterSolde.ConsulterSoldeActivity"
