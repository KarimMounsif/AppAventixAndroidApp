<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar"
        layout="@layout/my_toolbar"/>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.example.tve.lectureqrcode.QRCode.LectureQRcodeActivity">


    <TextView
        android:id="@+id/scanner_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:paddingTop="25dp"
        android:text="Encaisser"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_rentrer_montant"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scanner_qr_code"
        android:layout_marginTop="15dp"
        android:text="Veuillez rentrer le montant de la transaction (en â‚¬)" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_red"
        android:textColor="@color/cardview_light_background"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/activer_camera"
        android:id="@+id/btn_camera"/>

    <EditText
        android:id="@+id/et_montant_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="false"
        android:singleLine="false" />

</RelativeLayout>

</RelativeLayout>